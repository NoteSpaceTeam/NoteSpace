{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2020",
    "outDir": "build",
    "esModuleInterop": true,
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
