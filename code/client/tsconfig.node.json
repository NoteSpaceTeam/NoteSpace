{
  "compilerOptions": {
    "target": "es2022",
    "composite": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./*"],
      "@domain/*": ["./domain/*"],
      "@pwa/*": ["./pwa/*"],
      "@ui/*": ["./ui/*"],
      "@assets/*": ["./assets/*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": ["vite.config.ts", "src/pwa/*"]
}
