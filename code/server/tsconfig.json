{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node16",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "baseUrl": "../",
    "paths": {
      "@src/*": ["./server/src/*"]
    }
  },
  "include": ["src/**/*"],
  "files": ["src/types.d.ts"]
}
