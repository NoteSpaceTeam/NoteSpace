{
  "compilerOptions": {
    "target": "ESNext",
    "module": "node16",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["../*"],
      "@src/*": ["./*"],
      "@controllers/*": ["./controllers/*"],
      "@databases/*": ["./databases/*"],
      "@domain/*": ["./domain/*"],
      "@services/*": ["./services/*"]
    }
  },
  "include": ["src/**/*"],
  "files": ["src/types.d.ts"]
}
